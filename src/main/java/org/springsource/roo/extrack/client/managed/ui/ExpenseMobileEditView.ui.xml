<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:org.springsource.roo.extrack.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:org.springsource.roo.extrack.client.scaffold.ui">
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel debugId="boundElementHolder" styleName="{style.outer}">
    <div class="{style.error}" ui:field="errors"/>
    
    <div id="amount">
            <div class="{style.label}">Amount</div>
            <div class="{style.value}">
                <g:DoubleBox ui:field="amount"/>
            </div>
        </div>
    <div id="description">
            <div class="{style.label}">Description</div>
            <div class="{style.value}">
                <g:TextBox ui:field="description"/>
            </div>
        </div>
    <div id="report">
            <div class="{style.label}">Report</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="report"/>
            </div>
        </div>
    <div id="approval">
            <div class="{style.label}">Approval</div>
            <div class="{style.value}">
                <g:TextBox ui:field="approval"/>
            </div>
        </div>
    <div id="category">
            <div class="{style.label}">Category</div>
            <div class="{style.value}">
                <g:TextBox ui:field="category"/>
            </div>
        </div>
    <div id="created">
            <div class="{style.label}">Created</div>
            <div class="{style.value}">
                <d:DateBox ui:field="created"/>
            </div>
        </div>
    <div id="reasonDenied">
            <div class="{style.label}">Reason Denied</div>
            <div class="{style.value}">
                <g:TextBox ui:field="reasonDenied"/>
            </div>
        </div>

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
