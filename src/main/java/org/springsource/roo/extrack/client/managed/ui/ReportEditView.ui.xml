<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:org.springsource.roo.extrack.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:org.springsource.roo.extrack.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit Report</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New Report</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>

    <table class="{style.fields}" id="boundElementHolder">
      <tr id="purpose">
                <td>
                    <div class="{style.label}">Purpose:</div>
                </td>
                <td>
                    <g:TextBox ui:field="purpose"/>
                </td>
            </tr>
      <tr id="notes">
                <td>
                    <div class="{style.label}">Notes:</div>
                </td>
                <td>
                    <g:TextBox ui:field="notes"/>
                </td>
            </tr>
      <tr id="created">
                <td>
                    <div class="{style.label}">Created:</div>
                </td>
                <td>
                    <d:DateBox ui:field="created"/>
                </td>
            </tr>
      <tr id="department">
                <td>
                    <div class="{style.label}">Department:</div>
                </td>
                <td>
                    <g:TextBox ui:field="department"/>
                </td>
            </tr>
      <tr id="reporter">
                <td>
                    <div class="{style.label}">Reporter:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="reporter"/>
                </td>
            </tr>
      <tr id="approvedSupervisor">
                <td>
                    <div class="{style.label}">Approved Supervisor:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="approvedSupervisor"/>
                </td>
            </tr>
    </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
